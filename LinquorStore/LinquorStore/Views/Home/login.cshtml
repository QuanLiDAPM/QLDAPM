<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('/Images/LingquorStore.gif'); ">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">




                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @*if (!String.IsNullOrEmpty(ViewData.ModelState["LoginError"].Errors[0].ErrorMessage))
                    {
                        <div class="alert alert-dismissible fade show aler" role="alert">
                            <span class="d-block text-danger">@ViewData.ModelState["LoginError"].Errors[0].ErrorMessage</span>
                            <button type="button" class="close error-sty" data-dismiss="alert" aria-label="Close">
