                    <a href="https://myaccount.google.com/?utm_source=chrome-profile-chooser&pli=1" class="login100-social-item bg3">
                        <i class="fab fa-google-plus-g"></i>
                    </a>
                </div>*@

                <div class="flex-col-c p-t-90">
                    <span class="txt1 p-b-17">
                        Hoặc đăng kí mới
                    </span>

                    <a asp-action="DangKy" class="txt2">
                        Đăng kí
                    </a>
                </div>
                <div class="flex-col-c p-t-70">
                    <a asp-action="Index" class="txt2">
