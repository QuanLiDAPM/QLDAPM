@using Microsoft.AspNetCore.Http
@if (@Context.Session.GetString("_Id") == null)
{
    <div style=" display: flex; align-content: space-between; justify-content: center;">
        <h1>Bạn chưa đăng nhập</h1>
    </div>
}
else
{
    @section Slider {

        <h1>
            Tài khoản
            <small>Quản Lí Tài Khoản</small>
        </h1>

    }

    @model IEnumerable<LinquorStore.Models.TaiKhoan>

    <p>
        <a class="btn btn-create" asp-action="Create">Thêm Tài Khoản</a>
    </p>
    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>STT</th>

                <th>
                    @Html.DisplayNameFor(model => model.HoTen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TenDangNhap)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MatKhau)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ChucVu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SoDienThoai)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{ int stt = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>@stt</td>

                    <td>
                        @Html.DisplayFor(modelItem => item.HoTen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenDangNhap)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.MatKhau)*@
                        ************
                    </td>
                    <td>
                        @if (item.ChucVu == 1)
                        {
                            <span class="">  Quản lý</span>
                        }
                        else
                        {
                            <span class="tự chỉnh đê">  Nhân viên</span>
                        }
                    </td>
                    <td>
                        <a style="color: #8b92a9 " href="tel:@Html.DisplayFor(modelItem => item.SoDienThoai)">@Html.DisplayFor(modelItem => item.SoDienThoai)</a>

                    </td>
                    <td class="text-right">
                        <a class="btn btn-edit" href=" @Url.Action("Edit", new { id = item.Id })">
                            <i class="fa fa-edit"></i>
                        </a>
                        &ensp;
                        <a class="btn btn-del" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
                stt++;
            }
        </tbody>
    </table>
}