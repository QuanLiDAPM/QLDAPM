@using Microsoft.AspNetCore.Http
@if (@Context.Session.GetString("_Id") == null)
{
    <div style=" display: flex; align-content: space-between; justify-content: center;">
        <h1>Bạn chưa đăng nhập</h1>
    </div>
}
else
{
    @section Slider {

        <h1>
            Đơn Đặt Hàng
            <small>Thêm Đơn Đặt Hàng</small>
        </h1>

    }
    @model LinquorStore.Models.DatHang



    <h1>Create</h1>

    <h4>DatHang</h4>
    <hr />
    <div class="row">

        <h4 class="card-title text-center" style="color:#c71111; font-size:27px;">Thêm Đơn Đặt</h4>
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaiKhoanId" class="control-label"></label>
                <select asp-for="TaiKhoanId" class="form-control" asp-items="ViewBag.TaiKhoanId"></select>
            </div>
            <div class="form-group">
                <label asp-for="KhachHangId" class="control-label"></label>
                <select asp-for="KhachHangId" class="form-control" asp-items="ViewBag.KhachHangId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DienThoaiGiaoHang" class="control-label"></label>
                <input asp-for="DienThoaiGiaoHang" class="form-control" />
                <span asp-validation-for="DienThoaiGiaoHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChiGiaoHang" class="control-label"></label>
                <input asp-for="DiaChiGiaoHang" class="form-control" />
                <span asp-validation-for="DiaChiGiaoHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayDatHang" class="control-label"></label>
                <input asp-for="NgayDatHang" class="form-control" />
                <span asp-validation-for="NgayDatHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TinhTrang" class="control-label"></label>
                <input asp-for="TinhTrang" class="form-control" />
                <span asp-validation-for="TinhTrang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" /> |
                <a asp-action="Index">Quay lại</a>
            </div>
        </form>
    </div>

    @*<div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }*@
}