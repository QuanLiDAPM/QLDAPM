@using Microsoft.AspNetCore.Http
@if (@Context.Session.GetString("_Id") == null)
{
    <div style=" display: flex; align-content: space-between; justify-content: center;">
        <h1>Bạn chưa đăng nhập</h1>
    </div>
}
else
{
    @section Slider {

        <h1>
            Đơn Đặt Hàng
            <small>Xoá Thông Tin Đơn Đặt Hàng</small>
        </h1>

    }
    @model LinquorStore.Models.DatHang

    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4 class="card-title text-center" style="color:#c71111; font-size:27px;">Xoá Đơn Đặt</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DienThoaiGiaoHang)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DienThoaiGiaoHang)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DiaChiGiaoHang)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DiaChiGiaoHang)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NgayDatHang)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NgayDatHang)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TinhTrang)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TinhTrang)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.KhachHang)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.KhachHang.DiaChi)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TaiKhoan)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TaiKhoan.HoTen)
            </dd>
        </dl>

        <form asp-action="Delete">
            <a>
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Xoá" class="btn btn-app" />
            </a>   |
            <a asp-action="Index">Quay lại</a>
        </form>
    </div>
}