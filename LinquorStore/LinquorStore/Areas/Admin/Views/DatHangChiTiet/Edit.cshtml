@using Microsoft.AspNetCore.Http
@if (@Context.Session.GetString("_Id") == null)
{
    <div class="d-flex justify-content-center">
        Bạn chưa đăng nhập
    </div>
}
else
{
    @section Slider {

        <h1>
            Đặt Hàng Chi Tiết
            <small>Sửa Thông Tin Đặt Hàng Chi Tiết</small>
        </h1>

    }

    @model LinquorStore.Models.DatHangChiTiet

    <h1>Edit</h1>

    <h4>DatHangChiTiet</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="DatHangId" class="control-label"></label>
                    <select asp-for="DatHangId" class="form-control" asp-items="ViewBag.DatHangId"></select>
                    <span asp-validation-for="DatHangId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SanPhamId" class="control-label"></label>
                    <select asp-for="SanPhamId" class="form-control" asp-items="ViewBag.SanPhamId"></select>
                    <span asp-validation-for="SanPhamId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoLuong" class="control-label"></label>
                    <input asp-for="SoLuong" class="form-control" />
                    <span asp-validation-for="SoLuong" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DonGia" class="control-label"></label>
                    <input asp-for="DonGia" class="form-control" />
                    <span asp-validation-for="DonGia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-app" /> |
                    <a asp-action="Index">Quay lại</a>
                </div>
            </form>
        </div>
    </div>

   

}